{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "../dist",
		"lib": [
			"es6", "es2015", "es2015.promise"
		],
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"declaration": true,
		"noUnusedLocals": true
	},
	"include": [
		"**/*.test.ts"
	],
	"exclude": [
		"node_modules"
	]
}